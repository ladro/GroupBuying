<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.GroupBuying.MainActivity"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <FrameLayout
        android:id="@+id/fengexian"
        android:layout_above="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="2dip"
        android:background="@android:color/darker_gray"
        >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/tab_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbNear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_selector_near"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="附近"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/rbCheap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_cheap"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="找便宜"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/rbFarvor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_favour"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="特惠"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/rbPocket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_packet"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="口袋"
            android:textColor="@color/tab_selector_tv_color" />
        <RadioButton
            android:id="@+id/rbMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_more"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="更多"
            android:textColor="@color/tab_selector_tv_color" />
    </RadioGroup>

</LinearLayout>
