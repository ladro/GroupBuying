<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Fragment.NearFragment"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="8"
            android:background="@android:color/white">
        <ImageView
            android:id="@+id/near_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/near_logo" />
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray"/>
        <com.warmtel.expandtab.ExpandPopTabView
            android:id="@+id/near_expandpoptabview"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/colorLightGray"
            android:layout_weight="100"
            android:orientation="vertical">
            <ListView
                android:id="@+id/merchant_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ListView>
            </LinearLayout>>
</LinearLayout>
